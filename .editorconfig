root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

[*.php]
charset = utf-8
indent_size = 4

[*.vue]
indent_size = 2

[*.js]
indent_size = 2

[*.scss]
indent_size = 2

[*.sass]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2
